<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<StackPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.app.desktopapp.controller.AuthController"
        stylesheets="@../css/login.css"
        styleClass="root">

    <VBox spacing="8"
          alignment="CENTER"
          styleClass="login-card">

        <Label text="REGISTER" styleClass="login-title"/>

        <TextField promptText="Username"/>
        <PasswordField promptText="Password"/>
        <PasswordField promptText="Confirm Password"/>

        <Button text="Create Account"/>

        <Button text="Back to Login"
                onAction="#openLogin"
                style="-fx-background-color: transparent;
                       -fx-text-fill: #4a7bd6;
                       -fx-font-weight: 700;"/>

    </VBox>

</StackPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox spacing="12" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.app.desktopapp.controller.action.EditStudentController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Chỉnh sửa sinh viên" style="-fx-font-size:16px; -fx-font-weight:bold"/>

    <TextField fx:id="txtName" promptText="Họ tên"/>
    <TextField fx:id="txtEmail" promptText="Email"/>
    <DatePicker fx:id="dpDob"/>
    <TextField fx:id="txtMajor" promptText="Ngành"/>
    <TextField fx:id="txtYear" promptText="Khóa"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Lưu" onAction="#handleSave"/>
        <Button text="Hủy" onAction="#handleCancel"/>
    </HBox>
</VBox>

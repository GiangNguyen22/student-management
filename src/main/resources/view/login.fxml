<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<StackPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.app.desktopapp.controller.AuthController"
        stylesheets="@../css/login.css"
        styleClass="root">

    <!-- Login Card -->
    <VBox spacing="8"
          alignment="CENTER"
          styleClass="login-card">

        <Label text="LOGIN" styleClass="login-title"/>

        <TextField fx:id="txtUsername" promptText="Username"/>
        <PasswordField fx:id="txtPassword" promptText="Password"/>

        <Button text="Login" onAction="#handleLogin"/>
        <Label fx:id="lblStatus" styleClass="login-status"/>

    </VBox>

</StackPane>